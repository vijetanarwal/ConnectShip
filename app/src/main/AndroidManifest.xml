<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.connectship">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="ConnectShip"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConnectShip">

        <!-- SplashActivity as launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginSignupActivity -->
        <activity android:name=".LoginSignupActivity" />

        <!-- Role based dashboards -->
        <activity android:name=".InternDashboardActivity" />
        <activity android:name=".RecruiterDashboardActivity" android:exported="true"/>
        <activity android:name=".RoleSelectionActivity" />

    </application>

</manifest>
